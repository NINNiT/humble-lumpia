#!/bin/env sh
RELEASES_URL='https://api.github.com/repos/GloriousEggroll/proton-ge-custom/releases';

getReleaseData() {
    curl -s "$RELEASES_URL" | jq '[.[] | { name, published_at, tarball_url }]'
}

lsReleases() {
    getReleaseData | jq -r '.[].name | select(. != "")' | sort;
}

case $1 in
    "ls")
        lsReleases
    ;;
    *)
        echo "Unrecognized command '$1'";
    ;;
esac
